
<!DOCTYPE HTML>
<html>
<head>
  <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
exportEnabled: true,
animationEnabled: true,
theme: "light1", // "light1", "light2", "dark1", "dark2"
title:{
text: "Average Value Transactions Per Last Month"
},
axisY: {
title: "How many Customers!"
    //interval: 100
},
  dataPointMaxWidth : 50,

data: [{
type: "column",
showInLegend: true,
legendMarkerColor: "grey",
legendText: "Transactions Amount Range",
    /*showInLegend: true,
    legendText: "Gold",
       color: "pink",*/

    dataPoints: [
      {{#each users}}
      { y: {{count}},  label: "{{AmountRenge}}" },
      {{/each}}
]

}]
});
chart.render();

}
</script>



</head>
<body>
<div id="chartContainer" style="height: 300px; width: 100%; "></div><br><br><br><br><br>

